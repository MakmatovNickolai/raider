<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainAppColor</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="actionBarSize">60dip</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>

    </style>

    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_baseline_edit_24</item>
    </style>

    <style name="Widget.CustomTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>